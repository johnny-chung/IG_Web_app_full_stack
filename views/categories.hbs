<div class="row">
    <div class="col-md-12">
        <h2>Categories</h2>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Category ID</th>
                    <th scope="col">Category Name</th>
                </tr>
            </thead>
            <tbody>
                {{#each category}}
                <tr>
                   
                        <th scope="row">
                             <a href="/posts?category={{id}}">{{id}}</a>
                        </th>
                        <td>
                            <a href="/posts?category={{id}}">{{category}}</a>
                        </td>
                   
                </tr>
                {{/each}}

            </tbody>
        </table>

    </div>
</div>