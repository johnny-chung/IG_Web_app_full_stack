<div class="row">
    <div class="col-md-12">
        <h2>Posts</h2>
        <hr>
        {{#if post.length}}
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Post ID</th>
                    <th scope="col">Title</th>
                    <th scope="col">Post Date</th>
                    <th scope="col">Category</th>
                    <th scope="col">Published</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each post}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{title}}</td>
                    <td>{{#formatDate postDate}}{{/formatDate}}</td>
                    <td>{{category}}</td>
                    <td>{{published}}</td>
                    <td>
                        <a href="posts/delete/{{id}}" class="btn btn-danger">Remove</a>            
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
        {{else}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
        {{/if}}

        <a href="/posts/add" class="btn btn-lg btn-success pull-right">Add Post</a>
    </div>



</div>